{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/types": ["types.d.ts"],
            "@/config/*": ["config/*"],
            "@/utils/*": ["utils/*"],
            "@/controllers/*": ["controllers/*"]
            // "@/siteEnv/*": ["config/siteEnv.ts/*"]
            // "@/types/*": ["types/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
