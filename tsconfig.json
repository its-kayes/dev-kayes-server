{
    "compilerOptions": {
        "target": "ES6",
        "module": "es2020",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
